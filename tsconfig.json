{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "ES2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "noEmitHelpers": true,
    "outDir": "dist/esm",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true                        
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "./src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "bin",
    "dist",
    "node_modules/**"
  ]
}
